<view class="page">
  <view class="page__bd">
    <view class="weui-form-preview">
      <view class="weui-form-preview__hd">
        <view class="weui-form-preview__label">行程信息</view>
        <view class="weui-form-preview__value_in-hd">
          {{applicationData.postStartAddress}} => {{applicationData.postEndAddress}}
        </view>
      </view>
      <view class="weui-form-preview__bd">
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">姓名</view>
          <view class="weui-form-preview__value">{{applicationData.driverName}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">性别</view>
          <view class="weui-form-preview__value">{{applicationData.driverGender}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">手机号</view>
          <view class="weui-form-preview__value">{{applicationData.driverMobilePhoneNumber}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">车牌号</view>
          <view class="weui-form-preview__value">{{applicationData.driverCarPlateNumber}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">车辆型号</view>
          <view class="weui-form-preview__value">{{applicationData.driverCarModel}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">车辆颜色</view>
          <view class="weui-form-preview__value">{{applicationData.driverCarColor}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">发车时间</view>
          <view class="weui-form-preview__value">{{applicationData.postStartDateTime}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">提供座位</view>
          <view class="weui-form-preview__value">{{applicationData.postSeatNumber}}</view>
        </view>
        <view class="weui-form-preview__item">
          <view class="weui-form-preview__label">备注</view>
          <view class="weui-form-preview__value">{{applicationData.postNotes}}</view>
        </view>
      </view>
    </view>

    <view class="weui-form-preview">
      <view class="weui-panel__hd">预约信息</view>
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_text">
          <view class="weui-media-box__title weui-media-box__title_in-text">上车地点：{{applicationData.applicationStartAddress}}</view>
          <view class="weui-media-box__desc">备注：{{applicationData.applicationNotes}}</view>
          <view class="weui-media-box__info">
            <view class="weui-media-box__info__meta">手机号码</view>
            <view class="weui-media-box__info__meta">13733333333</view>
          </view>
        </view>
      </view>
      <view class="weui-form-preview__ft">
        <button bindtap='onCancel' class="weui-form-preview__btn weui-form-preview__btn_primary"
          hover-class="weui-form-preview__btn_active">取消预约
        </button>
        <button bindtap='onEdit' class="weui-form-preview__btn weui-form-preview__btn_primary"
          hover-class="weui-form-preview__btn_active">修改预约
        </button>
      </view>
    </view>
  </view>
</view>

