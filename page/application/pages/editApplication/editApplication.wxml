<view class="container">

  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">
      <view class="page-section-title">个人信息</view>
      <view class="weui-cells weui-cells_after-title">


        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">上车位置</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" value="{{formData.applicationStartAddress}}"
              placeholder="必填项"
              name="applicationStartAddress"></input>
          </view>
        </view>

        <view class="page-section">
          <!--<view class="page-section-title">输入区域高度自适应，不会出现滚动条</view>-->
          <view class="textarea-wrp">
            <textarea auto-height value="{{formData.applicationNotes}}" placeholder='备注' name='applicationNotes' />
          </view>
        </view>
      </view>


      <view class="page-section">

      </view>

      <view class="btn-area">
        <button type="primary" formType="submit">Submit</button>
        <button formType="reset">Reset</button>
      </view>
    </form>
  </view>

</view>
