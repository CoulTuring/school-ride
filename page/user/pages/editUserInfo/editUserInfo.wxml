<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__bd">
    <view wx:if="{{tip}}" class="weui-loadmore">
      <view class="weui-loadmore__tips">{{tip}}</view>
    </view>

    <form catchsubmit="formSubmit">
      <view class="weui-cells__title">个人信息</view>
      <view class="weui-cells weui-cells_after-title">


        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" value="{{formData.name}}" placeholder="必填项"
              name="name" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">性别</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="bindUserGenderChange" value="{{userGenderIndex}}"
              range="{{userGenderList}}">
              <view class="weui-input">{{userGenderList[userGenderIndex]}}</view>
            </picker>
            <!--<input class="weui-input" type="text" value="{{formData.userGender}}" placeholder="必填项"-->
            <!--name="userGender" />-->
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">手机号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="number" maxlength="11"
              value="{{formData.mobilePhoneNumber}}"
              placeholder="必填项"
              name="mobilePhoneNumber" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">部门（学院）</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="bindSchoolChange" value="{{schoolIndex}}" range="{{schools}}"
              range-key="name">
              <view class="weui-input">{{schools[schoolIndex].name}}</view>
            </picker>
            <!--<input class="weui-input" type="number" value="{{formData.mobilePhoneNumber}}"  placeholder="必填项"-->
            <!--name="mobilePhoneNumber" />-->
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">工号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" value="{{formData.userId}}" placeholder="可选项"
              name="userId" />
          </view>
        </view>

      </view>

      <view class="weui-cells__title">车辆信息</view>
      <view class="weui-cells weui-cells_after-title">

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">车型</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" value="{{formData.carModel}}" placeholder="可选项"
              name="carModel" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">车牌号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" value="{{formData.carPlateNumber}}"
              placeholder="可选项"
              name="carPlateNumber" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">颜色</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" value="{{formData.carColor}}" placeholder="可选项"
              name="carColor" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">座位数量</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="number" value="{{formData.carSeatNumber}}" maxlength="2"
              placeholder="可选项"
              name="carSeatNumber" />
          </view>
        </view>
      </view>
      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" formType="submit" disabled='{{submitting}}'>提交
        </button>
      </view>
    </form>
  </view>
</view>
